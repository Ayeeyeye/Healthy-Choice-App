<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardCornerRadius="8dp"
    android:elevation="18dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="#D8D8D8"
            app:cardCornerRadius="12dp"
            android:layout_margin="8dp"
            android:elevation="16dp">


            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textSize="16dp" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">


            <TextView
                android:id="@+id/tv_"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Product Name : "
                android:fontFamily="@font/quicksand_bold"
                android:textSize="16dp"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="Product Name "
                android:textSize="14dp"
                tools:ignore="DuplicateIds" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_topProd"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Product Code : "
                android:fontFamily="@font/quicksand_bold"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/tv_product_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="14dp"
                android:text="code "
                android:fontFamily="@font/quicksand_medium"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_pcode"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Quantity Sales : "
                android:fontFamily="@font/quicksand_bold"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/tv_quantity_sales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="14dp"
                android:text="qty sales "
                android:fontFamily="@font/quicksand_medium"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_pname"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Total Sales : "
                android:fontFamily="@font/quicksand_bold"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/tv_total_sales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="14dp"
                android:text="total sales "
                android:fontFamily="@font/quicksand_medium"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">


            <Button
                android:id="@+id/manage_information_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Manage Information"
                android:layout_marginTop="10dp"
                android:background="@drawable/rv_btn_bg"
                android:textColor="#fff"
                android:fontFamily="@font/quicksand_bold"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>