<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.healthy_choice">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AddUser"
            android:label="Add New User"
            android:parentActivityName=".AddUser"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"/>
        <activity
            android:name=".Update_Drink_Sales"
            android:label="Modify Drinks Sales"
            android:parentActivityName=".Update_Drink_Sales"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".List_Drinks_Sales"
            android:label="Drinks Sales"
            android:parentActivityName=".List_Drinks_Sales"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".Add_Drinks_Sale"
            android:label="Drinks Sales"
            android:parentActivityName=".Add_Drinks_Sale"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".List_Food_Sales"
            android:label="Food Sales"
            android:parentActivityName=".List_Food_Sales"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".Update_Food_Sales"
            android:label="Modify Food Sales"
            android:parentActivityName=".Update_Food_Sales"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".Add_Food_Sales"
            android:label="Food Sales"
            android:parentActivityName=".Add_Food_Sales"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".List_Product_Sales"
            android:label="Products Sales"
            android:parentActivityName=".List_Product_Sales"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".Update_Product_Sales"
            android:label="Modify Product Sales"
            android:parentActivityName=".Update_Product_Sales"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".Add_Product_Sales"
            android:label="Product Sales"
            android:parentActivityName=".Add_Product_Sales"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <activity android:name=".LoginPage" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>